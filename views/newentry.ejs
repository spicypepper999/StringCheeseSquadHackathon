<html>
<head>
    <link rel="stylesheet" href="/stylesheets/styles.css">
    <title>New entry</title>
</head>
<body>
    <%- include('partials/userbar') %>
    <fieldset>
        <legend>NEW ENTRY</legend>
        <form action="/entries/new" method="post">
            <label for="entryName">Enter Entry Name:</label>
            <input type="text" name="entryName">
            <label for="entryText">Enter Entry Text:</label>
            <input type="text" name="entryText">
            <% for(let emotion of emotions){ %>
                <input type="checkbox" id="<%=emotion.name%>" name="emotions" value="<%=emotion.name%>">
                <label for="<%=emotion.name%>"><%=emotion.name%></label>
                    <% } %>
            <button type="submit">SUBMIT</button>
        </form>
    </fieldset>
</body>
</html>